<?xml version="1.0" encoding="utf-8"?>

<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/swipeContainer">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UserProfileActivity"
        android:background="@color/white" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:background="@color/brown">

                <ImageView
                    android:id="@+id/imageView_profile_dp"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30dp"
                    android:background="@color/white"
                    tools:srcCompat="@tools:sample/avatars" />

                <TextView
                    android:id="@+id/textView_show_full_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="200dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="0dp"
                    android:hint="Name"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/textView_show_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView_show_full_name"
                    android:layout_marginTop="5dp"
                    android:hint="Email"
                    android:layout_marginLeft="200dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/textView_show_dob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView_show_email"
                    android:layout_marginLeft="200dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:layout_marginTop="5dp"
                    android:hint="Birthdate"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/textView_show_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView_show_dob"
                    android:layout_marginLeft="200dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:hint="Phone Number"
                    android:textSize="17dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:layout_margin="15dp"
                android:background="@color/white">

                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/progressBar"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:elevation="10dp"
                    android:visibility="gone" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/landlord_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_centerHorizontal="true"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">

                <TextView
                    android:id="@+id/rooms"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:background="@color/brown"
                    android:fontFamily="@font/montserrat_regular"
                    android:gravity="center"
                    android:paddingTop="50dp"
                    android:textColor="@color/white"
                    android:text="Rooms" />

                <TextView
                    android:id="@+id/followers"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@id/rooms"
                    android:background="@color/brown"
                    android:fontFamily="@font/montserrat_regular"
                    android:gravity="center"
                    android:paddingTop="50dp"
                    android:textColor="@color/white"
                    android:text="Followers" />

                <TextView
                    android:id="@+id/rating"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@id/followers"
                    android:background="@color/brown"
                    android:fontFamily="@font/montserrat_regular"
                    android:gravity="center"
                    android:paddingTop="50dp"
                    android:textColor="@color/white"
                    android:text="Rating" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

